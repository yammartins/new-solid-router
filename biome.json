{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["./app/utils/main.css", "commitlint.config.ts", "postcss.config.cjs", "./routeTree.gen.ts"]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 110,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "recommended": true,
        "noReactSpecificProps": "error",
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["log"]
          }
        }
      },
      "style": {
        "recommended": true
      },
      "complexity": {
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "performance": {
        "recommended": true
      },
      "correctness": {
        "recommended": true,
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "noUnusedLabels": "error",
        "noUnusedFunctionParameters": "error"
      },
      "a11y": {
        "recommended": true
      },
      "nursery": {
        "recommended": true,
        "useSortedClasses": "info",
        "noDocumentImportInPage": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingCommas": "es5"
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
